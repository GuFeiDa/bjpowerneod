<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjpowernode.crm.settings.dao.DictionaryValueDao">

    <!--List<DicValue> findValueAll();-->
    <select id="findValueAll" resultType="DicValue">
        select * from tbl_dic_value order by orderNo asc
    </select>

    <!--DicValue findByCodeOrValue(Map<String, String> dicValue);-->
    <!--DicValue findByCodeOrValue(DicValue dicValue);-->
    <select id="findByCodeOrValue" resultType="DicValue">
        SELECT * FROM tbl_dic_value WHERE typeCode = #{typeCode} AND VALUE= #{value}
    </select>

    <!--void saveDicValue(DicValue dicValue);-->
    <insert id="saveDicValue">
        insert into tbl_dic_value
        (
        id,
        value,
        text,
        orderNo,
        typeCode
        )
        values
        (
        #{id},
        #{value},
        #{text},
        #{orderNo},
        #{typeCode}
        )
    </insert>

    <!--List<DicValue> findListByTypeCode(String code);-->
    <select id="findListByTypeCode" resultType="DicValue">
        select * from tbl_dic_value where typeCode = #{code}
    </select>

</mapper>